{
  "name": "Gmail Priority AI",
  "version": "0.1.1",
  "manifest_version": 3,
  "action": { "default_popup": "popup.html" },
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.google.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/index.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content/floating-launcher.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "page.js",
        "content/ai-bridge.js",
        "content/annotator.js",
        "content/dom.js",
        "content/ui.js",
        "content/floating/*.js"
      ],
      "matches": ["https://mail.google.com/*"]
    },
    {
      "resources": ["content/floating/*.js"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
